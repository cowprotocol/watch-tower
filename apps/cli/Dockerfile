# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build cli`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t cli`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cli && \
  adduser --system -G cli cli

COPY dist/apps/cli cli
RUN chown -R cli:cli .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cli --omit=dev -f install

CMD [ "node", "cli" ]
